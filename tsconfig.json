{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": false,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "checkJs": true,
    "allowJs": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": ["es6"]
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
